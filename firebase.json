{
  "functions": [
    {
      "source": "functions/nodejs",
      "codebase": "web-api",
      "runtime": "nodejs20",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    },
    {
      "source": "functions/python",
      "codebase": "ai-model",
      "runtime": "python311",
      "region": "asia-northeast3",
      "ignore": [
        "venv",
        "venv/**"
      ]
    } 
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/reputation",
        "function": "getReputation"
      },
      {
        "source": "/api/reviews",
        "function": "getReviews"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "port": 4000
    },
    "auth": {
      "port": 9099
    },
    "storage": {
      "port": 9199
    },
    "pubsub": {
      "port": 8085
    }
  }
}


